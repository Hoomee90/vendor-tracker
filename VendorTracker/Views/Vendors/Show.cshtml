@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendor: @Model.Name</h1>

<h3>@Model.Description</h3>

@if (Model.Orders.Count == 0)
{
  <p>This vendor currently has no orders</p>
}
else
{
  <ul class="list-group">
    @foreach (Order order in Model.Orders)
    {
      <li class="list-group-item list-group-item-secondary">@order.Date - $@order.Price @order.Title, @order.Description</li>
    }
  </ul>
}

<p><a href="/vendors/@Model.Id/orders/new">Add a new order</a></p>
<p><a href="/vendors">Back to vendors</a></p>
