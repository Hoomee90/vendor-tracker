@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h1>Vendor List</h1>

@if (Model.Count == 0)
{
  <h3>There are currently no vendors</h3>
}
else
{
  <ul class="list-group">
    @foreach (Vendor vendor in Model)
    {
      <a class="list-group-item list-group-item-action list-group-item-secondary" href='/vendors/@vendor.Id'>@vendor.Name</a>
    }
  </ul>
}

<p><a href="/vendors/new">Add a new vendor</a></p>
<p><a href="/">Back home</a></p>