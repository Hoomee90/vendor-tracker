  Layout = "_Layout";
}

<h1>Add a new vendor</h1>

<form id="vendor-form" action="/vendors" method="post">
  <label for="name">Name</label>
  <input id="name" name="name" type="text">
  <label for="description">Description:</label>
  <div class="">
    <textarea id="description" name="description" rows="3" form="vendor-form"></textarea>
  </div>
  <button type="submit">Add</button>
</form>

